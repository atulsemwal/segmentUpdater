    <!-- {{!-- //about us --}} -->

    <div class="container-fluid">
      <div class="row">
        <div class="col-mid-10 col-mid-12 mx-auto text-center">
          <h1 class="main-heading text-center">It lets you</h1>
          <!-- {{!-- Replace dimension --}} -->
          <div class="row mt-5 func">
            <div class="mt-5 col-md-6 col-12 order-md-0 order-1">
              <figure>
                <img src="images/reg.svg" class="" alt="herosection_image" />
              </figure>
            </div>
            <!-- {{!-- right side --}} -->
            <div
              class="col-md-6 col-12 hero-text order-md-1 order-0 d-flex justify-content-center flex-column"
            >
              <h1>Replace Any Dimension</h1>
              <H1>Definition</H1>
              <P
                >E.g. Change dimension definition from "Old Page" to "New
                Page"</P
              >
              <button
                class="btn btn-primary"
                onclick="window.location.href='#segmentUpdater'"
              >
                Try it
              </button>
            </div>
          </div>

          <!-- {{!-- Regex dimension --}} -->
          <div class="row func">
            <div
              class="mt-5 col-md-6 col-12 order-md-0 order-1 d-flex justify-content-center flex-column"
            >
              <h1>Use Regular Expression</h1>
              <H1> To Updated Any Definition</H1>
              <P
                >E.g. Use regex /old (.*)/ to change "Old Page" to "(New $1)"</P
              >
              <button
                class="btn btn-primary"
                onclick="window.location.href='#segmentUpdater'"
              >
                Try it
              </button>
            </div>
            <!-- {{!-- right side --}} -->
            <div
              class="mt-5 col-md-6 col-12 hero-text order-md-1 order-0 d-flex justify-content-center flex-column"
            >
              <figure>
                <img
                  src="images/replace.svg"
                  class=""
                  alt="herosection_image"
                />
              </figure>
            </div>
          </div>
          <!-- {{!-- add and replace --}} -->
          <div class="row func">
            <div
              class="mt-5 col-md-6 col-12 order-md-0 order-1 d-flex justify-content-center flex-column"
            >
              <figure>
                <img
                  src="images/add_replace.svg"
                  class=""
                  alt="herosection_image"
                />
              </figure>
            </div>
            <!-- {{!-- right side --}} -->
            <div
              class="mt-5 col-md-6 col-12 hero-text order-md-1 order-0 d-flex justify-content-center flex-column"
            >
              <h1>Add and Replace</h1>
              <H1>Any Dimension Definition</H1>
              <P
                >E.g. Add changed definition ("New Page") below the old one("Old
                Page")</P
              >
              <button
                class="btn btn-primary"
                onclick="window.location.href='#segmentUpdater'"
              >
                Try it
              </button>
            </div>
          </div>
