   {{!-- OUR APP --}} -->

    <div class="container-fluid mt-5 px-5" id="segmentUpdater">
      <div class="row">
        <div class="col-mid-10 col-mid-12 mx-auto">
          <h1 class="main-heading text-center">Segment Updater</h1>
          <p class="text-center">*Please Read <b>Doc </b>Before Updating*</p>
          <!-- {{!-- from--}} -->
          <form action="/updater" method="POST" id="'updater">
            <div class="mb-3">
              <label for="token" class="form-label">Token</label>
              <input
                type="text"
                class="form-control"
                id="inputToken"
                aria-describedby="emailHelp"
                name="token"
                required
              />
              <div id="emailHelp" class="form-text">
                We'll never save your information
              </div>
            </div>
            <div class="mb-3">
              <label for="companyID" class="form-label">Company ID</label>
              <input
                type="text"
                class="form-control"
                id="inputCompanyID"
                name="companyID"
              />
            </div>
            <div class="mb-3">
              <label for="APIKey" class="form-label">API Key</label>
              <input
                type="text"
                class="form-control"
                id="inputAPIKey"
                name="APIKey"
                required
              />
            </div>
            <h5>Conditions</h5>
            <div class="mb-3">
              <label for="func">Func:</label>
              <select id="func" name="func" required>
                <option value="replace">Replace</option>
                <option value="add_and_replace">Add and Replace</option>
                <option value="regex">Regex</option>
              </select>
              <label for="old" class="form-label">Old Value</label>
              <input type="text" id="inputAPIKey" name="old" required />
              <label for="new" class="form-label ml-5">New</label>
              <input type="text" id="inputAPIKey" name="new" required />
              <label for="dimen_to_update" class="form-label"
                >Dimension to update</label
              >
              <input
                type="text"
                id="inputAPIKey"
                name="dimen_to_update"
                required
              />
            </div>
            <p>Updated-Limit is set to 50 newest segments.</p>

            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>

    <div class="container-fluid mt-5 px-5 text-center">
      <hr />
      <footer>
        <p>Made with ❤️ by Atul</p>
      </footer>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
